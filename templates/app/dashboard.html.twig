{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .dashboard-container {
            max-width: 800px;
            margin: 40px auto;
            padding: 20px;
            background: #1f1f1f;
            border: 3px solid #3f3f3f;
            box-shadow: 0 0 15px #000;
            border-radius: 8px;
            color: #fff;
        }

        .user-info {
            margin-bottom: 30px;
            padding: 20px;
            background: #2b2b2b;
            border-radius: 4px;
        }

        .user-info h2 {
            color: #00ffff;
            margin-bottom: 15px;
        }

        .user-info p {
            margin: 10px 0;
            color: #bbb;
        }

        .role-badge {
            display: inline-block;
            padding: 5px 10px;
            background: #00ffff;
            color: #000;
            border-radius: 4px;
            font-size: 12px;
            margin-top: 10px;
        }

        .logout-btn {
            display: inline-block;
            padding: 12px 24px;
            background: #ff4081;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            transition: all 0.2s ease;
        }

        .logout-btn:hover {
            background: #ff1a6c;
            transform: translateY(-2px);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="dashboard-container">
        <div class="user-info">
            <h2>Bienvenue {{ user.firstName }} {{ user.lastName }}</h2>
            <p>Email: {{ user.email }}</p>
            <p>Rôles:</p>
            {% if 'ROLE_BANNED' in user.roles %}
                <span class="role-badge">Banni</span>
            {% elseif 'ROLE_ADMIN' in user.roles %}
                <span class="role-badge">Administrateur</span>
            {% else %}
                <span class="role-badge">Utilisateur</span>
            {% endif %}
        </div>

        <a href="{{ path('app_logout') }}" class="logout-btn">Se déconnecter</a>
    </div>
{% endblock %}
